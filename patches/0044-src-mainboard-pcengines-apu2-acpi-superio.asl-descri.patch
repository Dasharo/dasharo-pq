+Scope (\_SB.PCI0.LIBR) {
+
+	Device (COM1) {
+		Name (_HID, EISAID ("PNP0501"))
+		Name (_UID, 1)
+
+		Method (_STA, 0, NotSerialized) {
+			Return (0x0F)
+		}
+
+		Name (_CRS, ResourceTemplate ()
+		{
+			IO (Decode16, 0x03F8, 0x3F8, 0x08, 0x08)
+			IRQNoFlags () {4}
+		})
+	}
+
+	Device (COM2) {
+		Name (_HID, EISAID ("PNP0501"))
+		Name (_UID, 2)
+
+		Method (_STA, 0, NotSerialized) {
+			Return (0x0F)
+		}
+
+		Name (_CRS, ResourceTemplate ()
+		{
+			IO (Decode16, 0x02F8, 0x2F8, 0x08, 0x08)
+			IRQNoFlags () {3}
+		})
+	}
+}
