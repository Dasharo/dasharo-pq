+int check_boost(void)
+{
+	u8 boost;
+
+	//
+	// Find the CPU boost item
+	//
+	boost = check_knob_value("boosten");
+
+	switch (boost) {
+	case 0:
+		return 0;
+		break;
+	case 1:
+		return 1;
+		break;
+	default:
+		printk(BIOS_INFO,
+			"Missing or invalid boost knob, disable CPU boost.\n");
+		break;
+	}
+
+	return 0;
+}
